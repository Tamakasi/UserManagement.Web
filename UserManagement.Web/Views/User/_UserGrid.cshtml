@model List<UserManagement.Models.Models.User>


<div class="table">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    User Name
                </th>
                <th>
                    Password
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Date Of Birth
                </th>
                <th>
                    Place Of Birth
                </th>
                <th>
                    Place Of Residance
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Id))
            {
                <tr>
                    <td> @obj.Id </td>
                    <td> @obj.UserName </td>
                    <td> @obj.Password </td>
                    <td> @obj.FirstName </td>
                    <td> @obj.LastName </td>
                    <td> @obj.DateOfBirth </td>
                    <td> @obj.PlaceOfBirth </td>
                    <td> @obj.PlaceOfResidence</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>